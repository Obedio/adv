<p id="notice"><%= notice %></p>

<h1>Lawsuits</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Assessment</th>
      <th>Description</th>
      <th>Amount</th>
      <th>User</th>
      <th>Client</th>
      <th>Venue</th>
      <th>Kind</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lawsuits.each do |lawsuit| %>
      <tr>
        <td><%= lawsuit.number %></td>
        <td><%= lawsuit.assessment %></td>
        <td><%= lawsuit.description %></td>
        <td><%= lawsuit.amount %></td>
        <td><%= lawsuit.user %></td>
        <td><%= lawsuit.client %></td>
        <td><%= lawsuit.venue %></td>
        <td><%= lawsuit.kind %></td>
        <td><%= lawsuit.status %></td>
        <td><%= link_to 'Show', lawsuit %></td>
        <td><%= link_to 'Edit', edit_lawsuit_path(lawsuit) %></td>
        <td><%= link_to 'Destroy', lawsuit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

