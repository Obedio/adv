<div class="editar">
  <strong>Editar Processo</strong>
  <%= form_for(@lawsuit) do |f| %>
    <% if @lawsuit.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@lawsuit.errors.count, "error") %> prohibited this lawsuit from being saved:</h2>
  
        <ul>
        <% @lawsuit.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="info">
      <div class='block-first'>
        <%= f.label :number %>
        <%= f.text_field :number %>
        
        <%= f.label :assessment %>
        <%= f.date_select :assessment %>
    
        <%= f.label :description %>
        <%= f.text_area :description %>
      </div>
      <div class='block-second'>
        <%= f.label :amount %>
        <%= f.text_field :amount %>
        <div class='slc-info'>
          <%= f.label :venue_id %>
          <%= f.collection_select(:venue_id, Venue.all, :id, :name, {include_blank: true})%>
        
          <%= f.label :kind_id %>
          <%= f.collection_select(:kind_id, Kind.all, :id, :name, {include_blank: true})%>
        
          <%= f.label :status_id %>
          <%= f.collection_select(:status_id, Status.all, :id, :name, {include_blank: true})%>
        </div>
      </div>
      <%= f.submit 'Salvar Processo', class: 'btn', :id => 'btn-save'%>
      <%= link_to 'Voltar', @lawsuit, class: 'btn' %>
    </div>
  <% end %>
</div>