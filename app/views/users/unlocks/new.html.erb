<div id="login">
	<strong>Reenviar instruções de desbloqueio</strong>

	<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
	  <%= devise_error_messages! %>

	  <div id="fields">
	    <%= f.label :email, 'E-mail' %><br />
	    <%= f.email_field :email, autofocus: true %>
	  </div>

	  <%= f.submit "Reenviar instruções de desbloqueio", class: 'btn', :id => 'btn-login' %>
	  
	<% end %>

	<div id='links'><%= render "users/shared/links" %></div>
</div>