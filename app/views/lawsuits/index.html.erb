<p id="notice"><%= notice %></p>
<div class="dv-busca">
  <h1>Processos</h1>
  <%= form_tag( '/lawsuits', :method => :get) do %>
    <%= text_field_tag 'search', nil, placeholder: 'Digite o nÂº do processo' %>
    <%= submit_tag 'Pesquisar' %>
  <% end %>
  <%= link_to clients_path do %>
    <span class="fa fa-plus-square" aria-hidden="true"><strong>Novo Processo</strong></span>
  <% end %>
</div>

<table>
  <thead>
    <tr>
      <th>Processo</th>
      <th>Cliente</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lawsuits.each do |lawsuit| %>
      <tr>
        <td class="nro-processo"><%= link_to lawsuit.number, lawsuit %></td>
        <td><%= link_to lawsuit.client.name, lawsuit.client %></td>
        <td><%= lawsuit.status.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="paginate"><%= will_paginate @lawsuits %></div>
<br>