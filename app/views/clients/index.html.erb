<div class="client">
  <i class="material-icons icon-client">supervisor_account</i>
  <span class="titulo-client">Clientes</span>

  <%= form_tag( '/clients', :method => :get) do %>
    <%= text_field_tag 'search', nil, placeholder: 'Digite o CPF do Cliente...' %>
     <button name="commit" type="submit">
      <i class="material-icons icon-client">pageview</i></button>
  <% end %>
</div>
<p class="notice"><%= notice %></p> 
<table  class="client">
  <thead>
    <tr>
      <th>Nome</th>
      <th>CPF</th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= link_to client.name, client %></td>
        <td><%= client.cpf %></td> 
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @clients %>
<br>
<ul class="links-client">
  <li>
    <a href="/clients/new"><i class="material-icons icon-client">add_box</i>
      <h3>Novo Cliente</h3>
    </a>
  </li>
