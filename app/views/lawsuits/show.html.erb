<p id="notice"><%= notice %></p>
<div class="info-processo">
    <strong>Número:</strong>
    <%= @lawsuit.number %>
  </br>

    <strong>Data Abertura:</strong>
    <%= @lawsuit.assessment %>
  </br>

    <strong>Descrição:</strong>
    <%= @lawsuit.description %>
  </br>

    <strong>Valor Total:</strong>
    <%= @lawsuit.amount %>
  </br>

    <strong>Valor pago:</strong>
    <%= @lawsuit.amount_paid %>
  </br>
  
    <strong>Advogado:</strong>
    <%= @lawsuit.user.email %>
  </br>

    <strong>Cliente:</strong>
    <%= @lawsuit.client.name %>
  </br>

    <strong>Vara:</strong>
    <%= @lawsuit.venue.name %>
  </br>

    <strong>Natureza:</strong>
    <%= @lawsuit.kind.name %>
  </br>

    <strong>Status:</strong>
    <%= @lawsuit.status.name %>
  </br>
</div>

<h3>Comentários</h3>
<table>
  <thead>
    <tr>
      <th>-----------</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lawsuit.observations.each do |observation| %>
      <tr>
        <td><%= observation.description %></td>
        <td><%= link_to 'Editar', edit_observation_path(observation) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h1>Pagamentos</h1>

<table>
  <thead>
    <tr>
      <th>Valor Pago</th>
      <th>Data</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lawsuit.payments.each do |payment| %>
      <tr>
        <td><%= payment.amount %></td>
        <td><%= payment.created_at%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Excluir', @lawsuit, method: :delete, data: { confirm: 'Você tem certeza?' } %>
<%= link_to 'Editar', edit_lawsuit_path(@lawsuit) %> |
<%= link_to 'Voltar', lawsuits_path %>
<strong><%= link_to 'Adicionar Observação', new_lawsuit_observation_path(lawsuit_id: @lawsuit.id) %></strong>
<strong><%= link_to 'Realizar Pagamento', new_lawsuit_payment_path(lawsuit_id: @lawsuit.id) %></strong>