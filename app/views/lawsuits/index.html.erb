<p id="notice"><%= notice %></p>

<h1>Lawsuits</h1>
<%= form_tag( '/lawsuits', :method => :get) do %>
  <%= text_field_tag 'search', nil, placeholder: 'Enter with clientÂ´s number' %>
  <%= submit_tag 'Search' %>
<% end %>
<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Client</th>
      <th>Kind</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lawsuits.each do |lawsuit| %>
      <tr>
        <td><%= lawsuit.number %></td>
        <td><%= lawsuit.client.name %></td>
        <td><%= lawsuit.kind.name %></td>
        <td><%= lawsuit.status.name %></td>
        <td><%= link_to 'Show', lawsuit %></td>
        <td><%= link_to 'Edit', edit_lawsuit_path(lawsuit) %></td>
        <td><%= link_to 'Destroy', lawsuit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

